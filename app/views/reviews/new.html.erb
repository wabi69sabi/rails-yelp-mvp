<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>


<div class="container">
  <div class="row">
    <h1 class="text-center">Review for <%= @restaurant.name %></h1>
    <div class="col-xs-12 col-sm-3 col-sm-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

